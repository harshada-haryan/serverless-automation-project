{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3LifecycleRotation",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:PutLifecycleConfiguration",
        "s3:GetLifecycleConfiguration"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*"
    }
  ]
}
